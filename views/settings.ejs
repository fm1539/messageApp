<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Settings</title>
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css" integrity="sha384-JcKb8q3iqJ61gNV9KGb8thSsNjpSL0n8PARn9HuZOnIxN0hoP+VmmDGMN5t9UJ0Z" crossorigin="anonymous">
    <link rel="stylesheet" href="settings.css">
</head>
<body>
    <div id="overlay" class="hide"></div>
    <nav class="navbar navbar-expand-md navbar-dark fixed-top bg-dark">
        <a class="navbar-brand" href="index.html">Carousel</a>
        <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarCollapse" aria-controls="navbarCollapse" aria-expanded="false" aria-label="Toggle navigation">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="navbarCollapse">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
                <a class="nav-link" href="/messages">Messages</a>
              </li>
            <li class="nav-item">
              <a class="nav-link" href="/friends">My Friends</a>
            </li>
            <li class="nav-item">
                <a class="nav-link active" href="/settings">Settings</a>
            </li>
            <li class="nav-item">
                <a class="nav-link" href="/logout">Log Out</a>
            </li>
          </ul>
        
        </div>
    </nav>
    <h1 style="margin-top: 100px; margin-left: 50px;">Settings</h1>
    <% if (message.length > 0) { %>
        <% if ((message == 'Username already taken!') || (message == 'Email already being used!')){ %>
          <div class="alert alert-danger">
            <%= message %>
          </div>
        <% } else { %>
            <div class="alert alert-success">
              <%= message %>
            </div>
        <% } %>
        <% } %>
    <div class="settings-table">
        <ul class="list-group">
            <li style="text-align: left;" class="list-group-item"><span class="setting-headers">Username</span> <p class="text"><%= user.username %></p>
                <button onclick="username();" class="update-info-button">Update</button>
            </li>
            <li style="text-align: left;" class="list-group-item"><span class="setting-headers">Email</span> <p class="text"><%= user.email %></p>
                <button onclick="email_address();" class="update-info-button">Update</button>
            </li>
            <li style="text-align: left;" class="list-group-item"><span class="setting-headers">First Name</span>  <p class="text"><%= user.first %></p>
                <button onclick="first_name();" class="update-info-button">Update</button>
            </li>
            <li style="text-align: left;" class="list-group-item"><span class="setting-headers">Last Name</span>  <p class="text"><%= user.last %></p>
                <button onclick="last_name();" class="update-info-button">Update</button>
            </li>
        </ul>
    </div>
    <div style="height:100%;width:100%;position:absolute;top:0;left:0;background-color:#000000;display:none;">
        <div id="divOperationMessage" style="background-color: White; border: 2px solid black;
           display: block;  width: 350px; z-index: 1001; top: 60px; left: 240px; position: fixed; 
           padding-left: 10px;margin:auto;">
    <div id="popup" class="hide">
        <h1 id="action-name" style="text-align: center;"></h1>
        <button id="close-button" onclick="close1();">&#10006;</button>
        <form id="change-form" action="/settings" method="POST">
            <input id="text_input" name="bob" type="text">
            <button type="submit">Save Changes</button>
        </form>
    </div>
</div>
</div>
</body>

<script>
    var popup = document.querySelector("#popup");
    var text_input = document.querySelector("#text_input");
    var close_button = document.querySelector("#close-button");
    var body = document.querySelector("#body");
    var actionName = document.querySelector("#action-name")
    function username(){
        actionName.innerHTML = "Change Username"
        popup.classList.remove("hide")
        popup.classList.add("show")
        popup.classList.add("username_div")
        text_input.name = "username";
        document.querySelector("body").style.backgroundColor = "rgba(0, 0, 0, 0.7)"

    }
    
    function email_address(){
        actionName.innerHTML = "Change Email Address"
        popup.classList.add("email_div");
        popup.classList.remove("hide")
        popup.classList.add("show")
        text_input.name = "email";
    }
    
    function first_name(){
        actionName.innerHTML = "Change First Name"
        popup.classList.remove("hide")
        popup.classList.add("show")
        popup.classList.add("first_name_div")
        text_input.name = "firstName";    
    }

    function last_name() {
        actionName.innerHTML = "Change Last Name"
        popup.classList.add("last_Name_div")
        popup.classList.remove("hide")
        popup.classList.add("show")
        text_input.name = "lastName"
    }

    function close1(){
        console.log(popup.classList);
        popup.classList=""
        popup.classList.add("hide")
    }
    
</script>
<script src="https://code.jquery.com/jquery-3.5.1.slim.min.js" integrity="sha384-DfXdz2htPH0lsSSs5nCTpuj/zy4C+OGpamoFVy38MVBnE+IbbVYUew+OrCXaRkfj" crossorigin="anonymous"></script>
<script>
    $(".update-info-button").click(function(){
        $(".overlay").toggle();
    })
</script>
<script src="https://cdn.jsdelivr.net/npm/popper.js@1.16.1/dist/umd/popper.min.js" integrity="sha384-9/reFTGAW83EW2RDu2S0VKaIzap3H66lZH81PoYlFhbGU+6BZp6G7niu735Sk7lN" crossorigin="anonymous"></script>
<script src="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/js/bootstrap.min.js" integrity="sha384-B4gt1jrGC7Jh4AgTPSdUtOBvfO8shuf57BaghqFfPlYxofvL8/KUEfYiJOMMV+rV" crossorigin="anonymous"></script>

</html>