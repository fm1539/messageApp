    <div class="left">
      <h1 class="addtag">Add Friends</h1>
      <div class="add">
        <form class="" action="/search" method="POST">
          <input name="searched_username" class="search" type="text">
          <button type="submit">Search</button>
        </form>
      <div class="searched-user">
        <h2 class="searched-user-header"><%= status %></h2>
        <h2><%= str %></h2>
        <form style="display:inline-block;" class="" action="/add" method="POST">
          <button class="add-button" type="submit" name="button">Add</button>
        </form>
      </div>

        <!--Use ejs to render searched username and hide and show add button with js. -->
      </div>
    </div>

    <div class="right">
      <h1 class="addtag">Friends</h1>
      <div class="current">
        <% for (var i = 0; i < friends.length; i++) { %>
        <div class="friends-item">
          <h2><%= friends[i] %></h2>
          <a href="/remove?ID=<%= i %>">X</a>
        </div>
        <hr>
        <% } %>
      </div>
    </div>

    <div class="friend-requests">
      <h1>Friend Requests</h1>

    

      <div class="requests">
        <% for (var i = 0; i < requests.length; i++) {%>
          
          <div class="friends-item">
            <input class="accepted_friend" style="visibility: hidden; z-index: -1;" name="accepted_friend" type="text">
            <h2 id="userName"> <%= requests[i] %></h2>
            <a href="/accept?ID=<%= i %>"> 
           <button id="<%= i %>" onclick="accept_button();" type="submit" name="accept">Accept</button></form></a>
          </a>
          <a href="/decline?ID=<%= i %>">
            <button id="<%= i %>" type="submit" name="decline">Decline</button>
          </a>
          </div>
          <hr>
       <% } %>

      </div>

    </div>
